  <SoundDef>
    <defName>Explosion_EMP_Quiet</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Weapon/Artillery/EMPExplosion_01d</clipFolderPath>
