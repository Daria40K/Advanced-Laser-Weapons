      <speed>1000</speed>
      <ai_IsIncendiary>false</ai_IsIncendiary>
      <damageAmountBase>15</damageAmountBase>
      <explosionRadius>2</explosionRadius>
      <soundExplode>Explosion_EMP_Quiet</soundExplode>
    </projectile>
